<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/main_replace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        />
    <RadioGroup
        android:id="@+id/main_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:background="#fff"
        >
        <RadioButton
            android:id="@+id/main_rb1"
            android:text="首页"
            android:drawableTop="@drawable/home"
            style="@style/MyradioButton"
            />
        <RadioButton
            android:id="@+id/main_rb2"
            android:drawableTop="@drawable/select"
            android:text="分类"
            style="@style/MyradioButton"
            />
        <RadioButton
            android:id="@+id/main_rb3"
            android:text="发现"
            android:drawableTop="@drawable/gift"
            style="@style/MyradioButton"
            />
        <RadioButton
            android:id="@+id/main_rb4"
            android:drawableTop="@drawable/mall"
            android:text="购物车"
            style="@style/MyradioButton"
            />
        <RadioButton
            android:id="@+id/main_rb5"
            android:drawableTop="@drawable/profile"
            android:text="我的"
            style="@style/MyradioButton"
            />
    </RadioGroup>
</LinearLayout>
