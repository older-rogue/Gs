<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_margin="@dimen/x8"
        android:id="@+id/mPagerRV_imgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mPagerRV_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/x2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="@dimen/x4"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:text="外套"
            />
        <LinearLayout
            android:id="@+id/mPagerRV_moreLayout"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="查看更多"
                android:id="@+id/textView" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more"
                android:id="@+id/imageView" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mPagerRV_item_Rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mPagerRV_foodLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="已经到底啦"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:background="#F2F2F2"
        />

</LinearLayout>